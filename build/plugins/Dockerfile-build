
  # Microsoft Dotnet installation to support `reportgenerator` for `gcov` plugin
  RUN set -ex \
    && dpkg -i /assets/plugins/dotnet/packages-microsoft-prod.deb \
    && apt update \
    && apt install -y \
       dotnet-sdk-8.0 \
       --no-install-recommends \
    && apt clean \
    && rm -rf /var/lib/apt/lists/*
